<div class="absolute top-0 left-0 z-50 navbar bg-base-100 shadow-md">
  <div class="flex-1">
    <%= link_to "OrgTree", root_path, class: 'btn btn-ghost normal-case text-xl' %>
  </div>

  <% if user_signed_in? %>
    <div class="flex-none">
      <ul class="flex px-1 space-x-2 items-center">
        <% if current_page?(organizations_path) || current_page?(root_path) %>
          <li>
            <%= link_to 'Добавить организацию', new_organization_path, class: "btn btn-primary" %>
          </li>
        <% end %>
        <li class="btn btn-ghost <%= current_page?(organizations_path) || current_page?(root_path) ? 'font-bold' : '' %>">
          <%= link_to "Организации", organizations_path %>
        </li>
        <li class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline-block w-6 h-6 stroke-current">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </label>
          <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
            <li><%= link_to "Настройки", edit_user_registration_path %></li>
            <li><%= button_to "Выйти", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    </div>
  <% end %>
</div>
