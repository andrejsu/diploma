<div class="hero h-screen py-10 bg-base-200">
  <div class="hero-content flex-col-reverse lg:flex-row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: { class: "card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100" }) do |f| %>
      <div class="card-body">

        <div class="form-control">
          <div class="label">
            <%= f.label :email %>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered" %>
        </div>

        <div class="form-control">
          <div class="label">
            <%= f.label :password, 'Пароль' %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-control">
            <div class="label cursor-pointer">
              <%= f.label :remember_me, 'Запомнить меня', class: "label-text" %>
              <%= f.check_box :remember_me, class: "checkbox checkbox-xs" %>
            </div>
          </div>
        <% end %>

        <div class="form-control mt-6">
          <%= f.submit "Войти", class: 'btn btn-primary' %>

        </div>

        <div class="flex-col-reverse form-control text-center">
          <%= render "users/shared/links" %>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <h1 class="text-5xl font-bold">Добро пожаловать!</h1>
      <p class="py-6">Пожалуйста, введите свой логин и пароль, чтобы получить доступ к своему аккаунту</p>
    </div>
  </div>
</div>